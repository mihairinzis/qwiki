{
  "name": "qwiki",
  "description": "Read wikipedia snippets when browsing the web",
  "version": "0.1",
  "incognito": "split",
  "permissions": [
    "storage", "tabs", "bookmarks",
    "https://*.wikipedia.org/"
  ],
  "web_accessible_resources": [
    "*.*", "wikidata/*.*", "fonts/*.*", "img/*.*"
  ],
  "content_scripts": [{
    "matches": ["https://*/*", "http://*/*"],
    "js": ["js/content.js"],
    "css": ["css/bubble.css"],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Qwiki",
    "default_popup": "html/chrome_options_popup.html"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "manifest_version": 2
}
